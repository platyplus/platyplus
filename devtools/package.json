{
  "name": "@platyplus/devtools",
  "private": false,
  "version": "0.0.7",
  "description": "Platy DevTools",
  "author": "Pierre-Louis Mercereau <24897252+plmercereau@users.noreply.github.com>",
  "homepage": "https://platy.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/platyplus/platyplus.git",
    "directory": "devtools/cli"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "platy": "./dist/cli.js"
  },
  "scripts": {
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/cli.ts",
    "prepublish": "yarn run build",
    "build": "yarn run clean && tsc -p tsconfig.build.json",
    "postbuild": "yarn run copy-files",
    "copy-files": "cpy  'templates/**/*' '!templates/*.ts' ../dist/ --cwd=src --parents",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@platyplus/fs": "^0.0.5",
    "@platyplus/lerna": "^0.0.5",
    "axios": "^0.20.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "git-config": "^0.0.7",
    "handlebars": "^4.7.6",
    "object-path": "^0.11.4",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/git-config": "^0.0.29",
    "@types/object-path": "^0.11.0",
    "@types/yargs": "^15.0.7",
    "cpy-cli": "^3.1.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0"
  },
  "gitHead": "f97171bcac8e03e23167612b98059e765c077691"
}
